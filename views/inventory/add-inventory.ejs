<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-div">
    <form id="addNewInventory" action="/inv/add-inventory" method="post">
      <label for="classificationId">Classification</label>
      <%- dropDownClassification %>

      <label for="invMake">Make</label>
      <input type="text" name="inv_make" id="invMake" pattern="[A-Za-z]{3,}" placeholder="Min of 3 characters" required value="<%= locals.inv_make %>">

      <label for="invModel">Model</label>
      <input type="text" name="inv_model" id="invModel" pattern="[A-Za-z]{3,}" placeholder="Min of 3 characters" required value="<%= locals.inv_model %>">

      <label for="invDescription">Description</label>
      <textarea name="inv_description" id="invDescription" cols="40" rows="4" required><%= locals.inv_description %></textarea>

      <label for="imgPath">Image Path</label>
      <input type="text" name="inv_image" id="imgPath" required value="/images/vehicles/no-image.png" pattern="^\/[A-Za-z0-9_-]+\.(jpg|jpeg|png|gif)$">

      <label for="thumbnailPath">Thumbnail Path</label>
      <input type="text" name="inv_thumbnail" id="thumbnailPath" required value="/images/vehicles/no-image-tn.png" pattern="^\/[A-Za-z0-9_-]+\.(jpg|jpeg|png|gif)$">

      <label for="invPrice">Price</label>
      <input type="text" name="inv_price" id="invPrice" pattern="^\d*\.?\d*$" placeholder="Decimal or integer" required value="<%= locals.inv_price %>">

      <label for="invYear">Year</label>
      <input type="text" name="inv_year" id="invYear" pattern="^\d{4}$" placeholder="4-digit year" required value="<%= locals.inv_year %>">

      <label for="invMiles">Miles</label>
      <input type="text" name="inv_miles" id="invMiles" pattern="^\d+$" placeholder="Digits only" required value="<%= locals.inv_miles %>">

      <label for="invColor">Color</label>
      <input type="text" name="inv_color" id="invColor" pattern="^[A-Za-z ]+$" required value="<%= locals.inv_color %>">

      <button class="form-button" type="submit">Add Vehicle</button>
    </form>
</div>

